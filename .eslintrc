{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "import/no-cycle": "warn",
    "import/no-extraneous-dependencies": [
      "warn",
      {
        "devDependencies": true
      }
    ],
    "import/no-unresolved": "error",
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "no-tabs": [
      "error",
      {
        "allowIndentationTabs": true
      }
    ],
    "no-console": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off",
    "prettier/prettier": "error"
  }
}